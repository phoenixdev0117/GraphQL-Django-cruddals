  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Example Restaurant Project - Python Debugger Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples/restaurantProject/manage.py",
      "args": [
        "runserver"
      ],
      "django": true,
      "justMyCode": false,
      "autoStartBrowser": false,
      "python": "${workspaceFolder}/examples/restaurantProject/venv/bin/python"
    },
    {
      "name": "Run Test Project - Python Debugger Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/cruddalsTestProject/manage.py",
      "args": [
        "runserver"
      ],
      "django": true,
      "autoStartBrowser": false,
      "python": "${workspaceFolder}/tests/cruddalsTestProject/venv/bin/python"
    },
    {
      "name": "Run Tests - Python Debugger Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/cruddalsTestProject/manage.py",
      "args": [
        "test",
        "tests/cruddalsTestProject/"     
      ],
      "django": true,
      "autoStartBrowser": false,
      "python": "${workspaceFolder}/tests/cruddalsTestProject/venv/bin/python"
    },
    {
      "name": "Run Current File - Python Debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}